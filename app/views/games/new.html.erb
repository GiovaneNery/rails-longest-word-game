<div class="d-flex justify-content-center m-4">
  <div>
    <h1 class="text-center">New Game</h1>
    <div class="d-flex mt-3 justify-content-center">
      <% @random = @letters.sample(10)%>
      <% @random.each do |letter| %>
        <div class="card p-3 m-1 text-light bg-danger"><h3><%= letter.capitalize %></h3></div>
      <% end %>
    </div>
    <div class="mt-4">
      <form action="/score" method="post" data-turbo="false">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <input type="text" name="word" value="<%= params[:word] %>">
        <input type="submit" value="Play !">
      </form>
    </div>
  </div>
</div>
